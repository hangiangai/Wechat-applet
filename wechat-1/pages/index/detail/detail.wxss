/* pages/index/detail/detail.wxss */

.wrapper{
  width: 100%;
  height: 100%;
}
.video-info-detail-box{
  width: 100%;
  height: 100%;
  background-color: rgba(249, 244, 248, 0.7);
}
/* 封面 */
.video-cover{
  width: 100%;
  background-color: rgba(77, 28, 57, 1);
  padding: 40rpx 0 40rpx 0;
}
.video-cover image{
  display: block;
  width: 45%;
  height: 460rpx;
  margin: auto auto;
}


.video-info{
  width: 100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}

.video-info .video-info-1{
  width: 90%;
  height: 90%;
  display: flex;
  flex-direction: row;
  padding: 36rpx 0 36rpx 0;
}
.video-info .video-info-1 .info-1-left{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #858585;
  width: 74%;
}
.video-info .video-info-1 .info-1-left label{
  margin-top: 1rpx;
}
.video-info .video-info-1 .info-1-left .info-1{
  font-size: 46rpx;
  font-weight: bold;
  color: rgba(72, 70, 71, 1);
} 
.video-info .video-info-1 .info-1-left .info-2{
  margin-top: 16rpx;
  margin-bottom: 20rpx;
}
.video-info .video-info-1 .info-1-left .info-2 .info-2-1{
  background-color: rgba(255, 210, 142, 1);
  border-radius: 6rpx;
  padding: 1px 8rpx 1rpx 8rpx;
}

.video-info .video-info-1 .info-1-right{
  width: 26%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  color: #858585;
}
.video-info .video-info-1 .info-1-right .right{
  width: 160rpx;
  height: 170rpx;
  font-size: 22rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center; 
  justify-content: center;
}
.video-info .video-info-1 .info-1-right .right .score{
  color: red;
  font-size: 40rpx;
}


/* 电影简介 */
.video-info-intro{
  width: 100%;
  font-family: Arial, Helvetica, sans-serif;
  border-top: 1rpx solid rgba(235, 235, 250, 0.8);
}
.video-info-intro .info-intro{
  padding: 40rpx 0 40rpx 0;
  width: 90%;
  margin: auto;
  display: flex;
  flex-direction: column;
}
.video-info-intro .info-intro .title{
  font-size: 28rpx;
  color: #858585;
  padding: 20rpx 0;
}
.video-info-intro .info-intro .content{
  font-size: 30rpx;
  color: rgba(72, 70, 71, 1);
  word-spacing: 4rpx;
}




/* 影人标题 */
.catas-title{
  width: 90%;
  margin: auto;
  margin-top: 30rpx;
}
.catas-title label{
  font-size: 28rpx;
  height: 50rpx;
  color: #858585;
  text-indent: 35rpx;
}

/* 影人内容 */
.video-catas-info{
  margin-top: 20rpx;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  font-family: Arial, Helvetica, sans-serif;
}
.video-catas-info .catas-list{
  display: inline-block;
  width: 24%;
  /* background-color: red; */
}
.video-catas-info .catas-list .list-info{
  display: flex;
  flex-direction: column;
  width: 25%;
}
.video-catas-info .catas-list .list-info:first-child{
  margin-left: 20%;
}
.video-catas-info .catas-list .list-info .pic{
  width: 160rpx;
  height: 210rpx;
}
.video-catas-info .catas-list .list-info .name{
  width: 160rpx;
  text-align: center;
  font-size: 26rpx;
  
}
.video-catas-info .catas-list .list-info .type{
  width: 160rpx;
  text-align: center;
  font-size: 24rpx;
  color: #858585;
}
.video-catas-info .more{
  vertical-align: top;
  margin-right: 50rpx;
} 
.video-catas-info .more .more-pic{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  width: 160rpx;
  background-color: #eee;
}
.video-catas-info .more .more-pic label{
  padding: 8rpx 8rpx;
}
.video-catas-info .more .more-pic label:first-child{
  border-bottom: 1px solid #858585;
}