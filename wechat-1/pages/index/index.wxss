/**index.wxss**/

.searchBox{
  overflow: hidden;
  width: 100%;
  height: 100rpx;
  position: relative;
}
.test1{
  position: absolute;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.searchBox .search{
  display: block;
  width: 92%;
  height: 60rpx;
  background-color: #f6f7f8;
  margin: 20rpx auto;
  border-radius: 30rpx;
}

.wrapper{
  width: 100%;
  height: 1334rpx;
}

.navBarBox{
  width: 100%;
  display: flex;
  flex-direction:row;
  border-bottom: 1rpx solid #eee;
  height: 70rpx;
  background-color: #fff;
}
.test{
   position: fixed;
  top: 0;
}

.navBarBox-stick{
  top: 0;
  position: fixed;
}

.navBarBox .navBar{
  width: 50%;
}
.navBarBox .navBar .content{
  text-align: center;
  font-size: 30rpx;
  height: 68rpx;
  line-height: 68rpx;
  color: #858585;
}
.navBarBox .navBar .underline{
  width: 0;
  transition: 0.1s;
  border-bottom: 2px solid black;
}




.main-content-box{
  width: 100%;
  margin-top: 10rpx;
}
.main-content-box .content-box{
  width: 100%;
  border-bottom: 0.5rpx solid #eee;
} 
.main-content-box .content{
  width: 92%;
  height: 260rpx;
  display: flex;
  flex-direction:row;
  margin: auto;
}
.content .cover{
  width: 25%;
}
.content .cover image{
  width: 88%;
  height: 88%;
  margin-top: 7%;
}

.content .video-info{
  width: 50%;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.content .video-info .video-info-title{
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
 
.content .video-info .video-info-title{
  font-size: 30rpx;
  font-weight: bold;

}
.content .video-info .video-info-director{
  margin-top: 6rpx;
  color: #858585;
}
.content .video-info .video-info-protagonist{
  margin-top: 4rpx;
  color: #858585;
}

.content .video-details{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.content .video-details .video-details-count{
  font-size: 22rpx;
  margin-top: 45%;
  color: rgba(236, 65, 77, 0.7);
  text-align: center;
  width: 75%;
  margin-right: -6rpx;
}
.content .video-details .video-details-btn{
  margin-top: 10rpx;
  font-size: 28rpx;
  width: 60%;
  height: 55rpx;
  border: 1px solid rgba(236, 65, 77, 0.7);
  font-weight: bold;
  text-align: center;
  line-height: 55rpx;
  border-radius: 8rpx;
  color: rgba(236, 65, 77, 0.7);
}