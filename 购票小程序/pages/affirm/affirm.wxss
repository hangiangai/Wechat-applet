page {
  background-color: #f5f5f5;
}

.box {
  background-color: white;
  width: 750rpx;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.box .boxbg {
  background-color: #edf9fe;
  width: 625rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.boxbg text {
  padding-left: 80rpx;
  color: rgb(90, 88, 88);
  font-size: 32rpx;
}

.boxbg .site {
  padding-top: 20rpx;
  padding-bottom: 35rpx;
  font-size: 38rpx;
}

/* 左边半圆 */

.boxbg .left {
  width: 60rpx;
  height: 50rpx;
  background-color: white;
  display: inline-block;
  border-radius: 40%;
  border: 1rpx solid white;
  position: absolute;
  top: 100rpx;
  left: -30rpx;
  padding-left: 0;
}

/* 右边半圆 */

.boxbg .right {
  width: 60rpx;
  height: 50rpx;
  background-color: white;
  display: inline-block;
  border-radius: 40%;
  border: 1rpx solid white;
  position: absolute;
  top: 100rpx;
  right: -30rpx;
  padding-left: 0;
}
/* 取票方式 */
.change {
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top: 20rpx;
  padding-left: 60rpx;
  width: 750rpx;
  height: 200rpx;
  justify-content: space-around;
}

.change text {
  font-size: 32rpx;
  color: rgb(90, 88, 88);
}

.change button::after {
  border: none;
}

.change button {
  background-color: white;
  font-size: 28rpx;
  margin: -40rpx 0 0 0;
  padding: 0;
  width: 150rpx;
  color: rgb(90, 88, 88);
  border: 2rpx solid rgb(90, 88, 88);
}


/* 取票人信息 */
.message {
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top: 20rpx;
  padding-left: 60rpx;
  width: 750rpx;
  height: 200rpx;
  color: rgb(90, 88, 88);
  justify-content: space-around;
  font-size: 32rpx;
}

.message .person {
  display: flex;
  width: 630rpx;
  height: 100rpx;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid rgb(177, 175, 175);
}

.message .person input {
  line-height: 100rpx;
  height: 100rpx;
  width: 130rpx;
  color: black;
}

.message .person text, .message .phone text {
  line-height: 100rpx;
  height: 100rpx;
}

.message .phone {
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  width: 630rpx;
  height: 100rpx;
}

.message .phone input {
  line-height: 100rpx;
  height: 100rpx;
  width: 200rpx;
  color: black;
}


/* 订票协议 */
.agreement {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  padding-left: 50rpx;
}

.agreement navigator {
  color: #0c86ef;
}

checkbox .wx-checkbox-input {
  border-radius: 3rpx;
  height: 26rpx;
  width: 26rpx;
  margin-top: -4rpx;
}


.base {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  width: 750rpx;
  position: fixed;
  bottom: 0;
  justify-content: space-between;
}

.base button::after {
  border: none;
}

.base button {
  background-color: #ececec;
  height: 100rpx;
  width: 140rpx;
  border-radius: 0;
}

.base .buy {
  line-height: 100rpx;
  text-align: center;
  width: 300rpx;
  height: 100rpx;
  border: 0;
  color: white;
  background-color: #0c86ef;
}

.base text {
  font-size: 18px;
  color: #0c86ef;
}

.base .title {
  display: flex;
  width: 450rpx;
  background-color: white;
  padding-left: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: rgb(90, 88, 88);
  font-size: 14px;
}

